#top-most EditorConfig file
root = true

[*.cs]
# Indentation and general rules
indent_style = tab
tab_width = 4
indent_size = 4
insert_final_newline=true

# Naming styles
csharp_indent_case_contents = true
csharp_indent_case_contents_when_block = false

dotnet_naming_rule.private_members_rule.severity = error
dotnet_naming_rule.private_members_rule.symbols = private_members
dotnet_naming_rule.private_members_rule.style = private_member_style

dotnet_naming_symbols.private_members.applicable_kinds = field
dotnet_naming_symbols.private_members.applicable_accessibilities = private
dotnet_naming_symbols.private_members.required_modifiers = readonly

dotnet_naming_style.private_member_style.capitalization = camel_case
dotnet_naming_style.private_member_style.required_prefix = m_

dotnet_naming_rule.local_variables_rule.severity = warning
dotnet_naming_rule.local_variables_rule.symbols = local_variables
dotnet_naming_rule.local_variables_rule.style = local_variable_style

dotnet_naming_symbols.local_variables.applicable_kinds = local
dotnet_naming_symbols.local_variables.applicable_accessibilities = *
dotnet_naming_symbols.local_variables.required_modifiers = *

dotnet_naming_style.local_variable_style.capitalization = camel_case
dotnet_naming_style.local_variable_style.required_prefix = none

dotnet_naming_rule.method_parameters_rule.severity = warning
dotnet_naming_rule.method_parameters_rule.symbols = method_parameters
dotnet_naming_rule.method_parameters_rule.style = method_parameter_style

dotnet_naming_symbols.method_parameters.applicable_kinds = parameter
dotnet_naming_symbols.method_parameters.applicable_accessibilities = *
dotnet_naming_symbols.method_parameters.required_modifiers = *

dotnet_naming_style.method_parameter_style.capitalization = camel_case
dotnet_naming_style.method_parameter_style.required_prefix = _
